.main-header
  padding-left: 20px
  padding-right: 20px
  display: flex
  flex-direction: column
  align-items: center
  background-image: linear-gradient(29deg, var(--darkish-purple-alpha), rgba(11, 102, 178, 0.75) 85%, var(--ocean-blue-alpha))
  height: 100vh
  justify-content: flex-end

.main-header__logo
  text-align: center
  
.main-header__logo__image
  width: 50%

.main-header__tagline
  padding: 80px 30px

.emoji-font
  font-family: monospace
